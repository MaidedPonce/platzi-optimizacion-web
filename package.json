{
  "name": "platzi-optimizacion-web",
  "version": "0.1.0",
  "description": "Proyecto del curso de Optimizacion Web de Platzi",
  "author": "@jonalvarezz",
  "scripts": {
    "start": "NODE_OPTIONS='--openssl-legacy-provider' npm run dev",
    "dev": "NODE_OPTIONS='--openssl-legacy-provider' webpack-dev-server",
    "build": "NODE_OPTIONS='--openssl-legacy-provider' webpack -p",
    "analyze-p": "NODE_OPTIONS='--openssl-legacy-provider' webpack -p --analyze",
    "serve": "serve ."
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "license": "ISC",
  "devDependencies": {
    "husky": "^4.2.3",
    "hyperscript": "^2.0.2",
    "lodash": "^4.17.15",
    "prettier": "1.19.1",
    "pretty-quick": "^2.0.1",
    "webpack": "^4.42.0",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "serve": "^14.2.1"
  }
}
